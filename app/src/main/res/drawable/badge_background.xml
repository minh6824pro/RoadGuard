<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền bo góc tròn màu bạc -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD"/> <!-- Màu bạc -->
            <corners android:radius="16dp"/> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Icon và Text trong một hình vector -->
    <item android:gravity="center">
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="100dp"
            android:height="40dp"
            android:viewportWidth="100"
            android:viewportHeight="40">

            <!-- Icon Bạc -->
            <group
                android:translateX="20"
                android:translateY="20">
                <path
                    android:pathData="M12,0 C18.6274,0 24,5.3726 24,12 C24,18.6274 18.6274,24 12,24 C5.3726,24 0,18.6274 0,12 C0,5.3726 5.3726,0 12,0 Z"
                    android:fillColor="#FFFFFF"/>
                <!-- Thêm chi tiết vào biểu tượng bạc, ví dụ như ngôi sao -->
                <path
                    android:pathData="M12,6 L13.09,10.26 L17,10.27 L13.97,12.97 L15.08,17 L12,14.27 L8.92,17 L10.03,12.97 L7,10.27 L10.91,10.26 Z"
                    android:fillColor="#BDBDBD"/>
            </group>

            <!-- Text "Bạc" -->
            <group
                android:translateX="50"
                android:translateY="20">
                <path
                    android:pathData="M5,7 h10 v2 h-4 v2 h4 v2 h-10 v-2 h4 v-2 h-4z"
                    android:fillColor="#FFFFFF"/>
            </group>

        </vector>
    </item>

</layer-list>
