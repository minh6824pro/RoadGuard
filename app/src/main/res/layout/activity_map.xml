<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/png_map">
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search"
            android:elevation="4dp"
            android:hint="   Tìm kiếm"
            android:lineSpacingExtra="0dp"
            android:padding="10dp"
            android:textColorHint="@color/light_content_tertiary"
            android:textSize="20sp"
            android:textStyle="normal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mark" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="245dp"
                android:layout_marginTop="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mark" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="540dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mark" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="326dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mark" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="275dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mark" />
            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="190dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_location" />
            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="207dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="310dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/pothole_inf_bg"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="0dp">
                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="8dp"
                    android:text="Thủ Đức"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/reportImage"
                    android:layout_width="186dp"
                    android:layout_height="110dp"
                    android:layout_below="@id/locationText"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_pothole" />
                <!-- Detected By Text -->
                <TextView
                    android:id="@+id/detectedByText"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_below="@id/reportImage"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:text="Phát hiện bởi: Tuấn"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
                <!-- Status Button -->
                <Button
                    android:id="@+id/statusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_below="@id/reportImage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="0dp"
                    android:backgroundTint="#66BB6B"
                    android:text="Đã sửa"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/ic_navigate" />
                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/blue_circle_background"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_sign" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>