<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="90dp"
    android:paddingTop="20dp"
    tools:context=".HomeFragment">

    <!-- Parent LinearLayout with vertical orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
>

        <!-- First Layout (Weight 1) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Location Icon and Quận Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_location_white"
                        app:tint="@color/Light_Background_BgAccent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quận 1"
                        android:textSize="18sp"
                        android:paddingStart="4dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#414141" />
                </LinearLayout>

                <!-- Name Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sơn Tùng MTP"
                    android:textSize="16sp"
                    android:textColor="#121212"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/nunito_medium"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:padding="2dp"
                android:src="@drawable/profile_sontung"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:scaleType="centerCrop"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <!-- Second Layout (Weight 1) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <!-- Ô thứ nhất -->
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_number_dashboard"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số ổ gà của bạn"
                    android:textSize="14sp"
                    android:textColor="#1E50D8"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="12"
                android:textColor="#1E50D8"
                android:textSize="32sp"
                android:textStyle="bold" />
            </LinearLayout>


            <!-- Ô thứ hai -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_number_dashboard"
                android:padding="8dp"
                android:elevation="8dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số ổ gà"
                    android:layout_marginBottom="16dp"
                    android:textSize="14sp"
                    android:textColor="#1E50D8"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="123"
                android:textSize="32sp"
                android:textColor="#1E50D8"
                android:textStyle="bold" />
            </LinearLayout>


            <!-- Ô thứ ba -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_number_dashboard"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quãng đường bạn đã đi"
                    android:textSize="14sp"
                    android:textColor="#1E50D8"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201"
                    android:textSize="32sp"
                    android:textColor="#1E50D8"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textSize="12sp"
                    android:textColor="#1E50D8"
                    android:gravity="center"
                    android:layout_marginStart="4dp" /> <!-- Thêm khoảng cách giữa số và km -->
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>


        <!-- Third Layout (Weight 4) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:background="@drawable/chart_container_border"
            >

        <!-- Ô thứ nhất -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
        android:padding="8dp">
            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radarChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Ô thứ hai -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
    android:padding="8dp">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>

    </LinearLayout>


        <!-- Fourth Layout (Weight 4) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/chart_container_border"

            android:padding="16dp">

            <!-- Title Row with Dropdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Số ổ gà theo thời gian"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunito_bold" />

                <Spinner
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/time_options"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Main Statistic -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 ổ gà"
                android:textSize="32sp"
                android:textColor="@color/Light_Background_BgAccent"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 ổ gà"
                android:textSize="16sp"
                android:textColor="@color/detectedBy"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginTop="4dp" />

            <!-- Placeholder for Chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <!-- Legend Row -->


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
