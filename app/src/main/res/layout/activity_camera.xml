<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#fff" />

    <!-- Bottom Control Layout -->
    <LinearLayout
        android:id="@+id/bottomControlLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
    android:orientation="horizontal"
    android:gravity="center">

    <!-- Flash Toggle Button -->
    <ImageButton
        android:id="@+id/flashToggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/round_flash_on_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#fff" />

    <!-- Capture Button -->
    <ImageButton
        android:id="@+id/captureButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_camera"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#fff" />

    <!-- Flip Camera Button -->
    <ImageButton
        android:id="@+id/flipCamera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/round_cameraswitch_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#fff" />
</LinearLayout>

    <!-- Text Buttons Below Capture Button -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_above="@id/bottomControlLayout"
android:layout_marginBottom="8dp"
android:orientation="horizontal"
>


</LinearLayout>
    </RelativeLayout>
